{
    "name": "composer/pcre",
    "description": "PCRE wrapping library that offers type-safe preg_* replacements.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "pcre",
        "regex",
        "preg",
        "regular expression"
    ],
    "authors": [
        {
            "name": "Jordi Boggiano",
            "email": "j.boggiano@seld.be",
            "homepage": "http://seld.be"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "^5",
        "phpstan/phpstan": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Composer\\Pcre\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Composer\\Pcre\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "3.x-dev"
        }
    },
    "scripts": {
        "test": "vendor/bin/simple-phpunit",
        "phpstan": "phpstan analyse"
    }
}
